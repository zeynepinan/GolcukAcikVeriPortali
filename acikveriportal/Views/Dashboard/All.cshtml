@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using acikveriportal.ViewModels
@model List<DataSetViewModel>


<body>
    <input type="button" class="btn btn-success" value="Veri Seti Ekle" onclick="location.href='@Url.Action("CreateDataSet", "Dashboard")'" />
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Count() > 0)
                    {
                        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Açıklamaya göre ara.." title="Type in a name">
                        <table class="table table-hover" id="list">
                            <thead>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Organizasyon</th>
                            <th>Format</th>
                            <th>Etiket</th>
                            <th>Lisans</th>

                            <th>Düzenle</th>
                            <th>Sil</th>


                            </thead>
                            <tbody>
                                @foreach (DataSetViewModel dataSet in Model)
                                {
                                <tr>
                                    <td>@dataSet.Title</td>
                                    <td>@dataSet.CategoryName</td>
                                    <td>@dataSet.OrganizationName</td>
                                    <td>@dataSet.FormatName</td>
                                    <td>@dataSet.LabelName</td>
                                    <td>@dataSet.LicenseName</td>
                               
                                    <td>@Html.ActionLink("Düzenle", "EditDataSet", "Dashboard", new { @id = $"{dataSet.Id}" }, null)</td>
                                    <td>@Html.ActionLink("Sil", "DeleteDataSet", "Dashboard", new { @id = $"{dataSet.Id}" },null)</td>
                                   
                                </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center alert-info">
                            <h3>Veri Seti Yok</h3>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>

