
@{
    ViewBag.Title = "AllCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using acikveriportal.Models
@model List<Category>

<body>
    <input type="button" class="btn btn-success" value="Kategori Ekle" onclick="location.href='@Url.Action("CreateCategory", "Dashboard")'" />
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Count() > 0)
                    {
                        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Ad a  göre ara.." title="Type in a name">
                        <table class="table table-hover" id="list">
                            <thead>
                            <th>Ad</th>
                           
                            <th>Düzenle</th>
                            <th>Sil</th>
                            </thead>
                            <tbody>
                                @foreach (Category category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                       
                                        <td>@Html.ActionLink("Düzenle", "EditCategory", "Dashboard", new { @id = $"{category.Id}" }, null)</td>
                                        <td>@Html.ActionLink("Sil", "DeleteCategory", "Dashboard", new { @id = $"{category.Id}" }, null)</td>
                                        @*}*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center alert-info">
                            <h3> Kategori Yok</h3>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>


