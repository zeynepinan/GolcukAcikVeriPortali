
@{
    ViewBag.Title = "AllDataRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using acikveriportal.ViewModels
@model List<DataRequestViewModel>


<body>
     <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Count() > 0)
                    {
                        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Açıklamaya göre ara.." title="Type in a name">
                        <table class="table table-hover" id="list">
                            <thead>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Statü</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                            </thead>
                            <tbody>
                                @foreach (DataRequestViewModel dataRequest in Model)
                                {
                                    <tr>
                                        <td>@dataRequest.Title</td>
                                        <td>@dataRequest.Description</td>
                                        <td>@dataRequest.StatusName</td>
                                        <td>@Html.ActionLink("Düzenle", "EditDataRequest", "Dashboard", new { @id = $"{dataRequest.Id}" }, null)</td>
                                        <td>@Html.ActionLink("Sil", "DeleteDataRequest", "Dashboard", new { @id = $"{dataRequest.Id}" }, null)</td>
                                      
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center alert-info">
                            <h3>Veri İsteği Yok</h3>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>

