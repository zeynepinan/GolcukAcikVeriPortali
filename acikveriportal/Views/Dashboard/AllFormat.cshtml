
@{
    ViewBag.Title = "AllFormat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using acikveriportal.Models
@model List<Format>

<body>
    <input type="button" class="btn btn-success" value="Format Ekle" onclick="location.href='@Url.Action("CreateFormat", "Dashboard")'" />
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Count() > 0)
                    {
                        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Ad a  göre ara.." title="Type in a name">
                        <table class="table table-hover" id="list">
                            <thead>
                            <th>Ad</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                            </thead>
                            <tbody>
                                @foreach (Format format in Model)
                                {
                                    <tr>
                                        <td>@format.Name</td>
                                        <td>@Html.ActionLink("Düzenle", "EditFormat", "Dashboard", new { @id = $"{format.Id}" }, null)</td>
                                        <td>@Html.ActionLink("Sil", "DeleteFormat", "Dashboard", new { @id = $"{format.Id}" }, null)</td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center alert-info">
                            <h3> Format Yok</h3>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>



