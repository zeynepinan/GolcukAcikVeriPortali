
@{
    ViewBag.Title = "CreateDataRequest";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using acikveriportal.Models
@model DataRequest

<body>

    <input type="button" class="btn btn-success" value="Veri İstek Listesi" onclick="location.href='@Url.Action("DataRequests", "Home")'" />
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("DataRequestCreated", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form-group">
                            @Html.LabelFor(n => n.Title)
                            @Html.TextBoxFor(n => n.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(n => n.Title, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(n => n.Description)
                            @Html.TextBoxFor(n => n.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(n => n.Description, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(n => n.StatusId)
                            @Html.DropDownListFor(n => n.StatusId, new SelectList(ViewBag.Statuses, "Id", "Name"), "Statü Seç..", new { @class = "form-control" })
                            @Html.ValidationMessageFor(n => n.StatusId, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-success">Kaydet</button>
                    }

                </div>
            </div>
        </div>
    </section>

</body>

